{
  "name": "@zskarte/workspace",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "start": "run-s start:*",
    "start:app": "cd packages/app && npm start",
    "start:server": "cd packages/server && npm start",
    "lint": "run-p lint:*",
    "lint:app": "biome lint ./packages/app/src",
    "lint:server": "biome lint ./packages/server/src",
    "lint:types": "biome lint ./packages/types",
    "prettify": "run-p prettify:*",
    "prettify:app": "prettier --write \"./packages/app/src/**/*.{js,ts,html,css,json,md}\"",
    "build": "run-s build:*",
    "build:app:dev": "cd packages/app && npm run ng:build:dev",
    "build:app:prod": "cd packages/app && npm run ng:build:prod",
    "build:server": "cd packages/server && npm run build",
    "build:types": "cd packages/types && npm run build",
    "cleanup": "tsx scripts/cleanup.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "ol": "^10.3.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2"
  }
}
